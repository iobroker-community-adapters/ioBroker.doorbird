{
    "i18n": true,
    "type": "tabs",
    "tabsStyle": {
        "width": "calc(100% - 100px)"
    },
    "iconPosition": "top",
    "items": {
        "_general": {
            "type": "panel",
            "label": "General settings",
            "icon": "data:image/svg+xml;base64,",
            "items": {
                "adapterAddress": {
                    "newLine": true,
                    "type": "ip",
                    "listenOnAllPorts": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Adapter IP"
                },
                "adapterport": {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 2,
                    "label": "Port"
                },
                "birdip": {
                    "newLine": true,
                    "type": "text",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "DoorBird Device IP"
                },
                "birdid": {
                    "type": "text",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "DoorBird Device ID"
                },
                "_startWizard": {
                    "type": "sendTo",
                    "command": "wizard",
                    "jsonData": "{\"address\": \"${data.adapterAddress}\"}",
                    "icon": "search",
                    "variant": "contained",
                    "showProcess": true,
                    "useNative": true,
                    "xs": 2,
                    "sm": 2,
                    "md": 2,
                    "lg": 2,
                    "label": "Search devices"
                },
                "birduser": {
                    "newLine": true,
                    "type": "text",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Username"
                },
                "birdpw": {
                    "type": "password",
                    "repeat": false,
                    "visible": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "label": "Password"
                }
            }
        }
    }
}